<div class="background">
  <div class="container-fluid">
    <h4>
    <%= link_to image_tag(S3_BUCKET.object('vim.png').presigned_url(:get, expires_in: 60 * 60 * 24), height: '100px', width: '100px') + ' Guide' %>
    </h4>
    <br>
    <%= link_to '.vimrc Configuration', vimrcs_path, class: 'btn btn-secondary' %>
    <hr>
    <h6> Enter functionality you are searching for (saving, quitting, etc.) </h6>
    <div class="command-table">
      <input class="form-control" id="myInput" type="text" placeholder="Search Commands...">
      <hr>
      <% @vim_types.each do |vim_type| %>
        <h6> <%= vim_type.name %> </h6>
        <table class="table table-bordered table-striped">
          <thead>
            <tr>
              <th> Command </th>
              <th> Function </th>
            </tr>
          </thead>
          <tbody id="myTable">
            <% vim_type.vim_commands.sort_by_weight.each do |vim| %>
              <tr>
                <td class="col-width"><%= vim.command %> </td>
                <td><%= vim.description %></td>
                <td style="display: none;"><%= vim.hidden_attributes %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
    <h6 class="pull-right"> Please note: This is not a comprehensive guide to using Vim. This page simply aims to ease the transition from using graphical IDEs to Vim. </h6>
  </div>
</div>
