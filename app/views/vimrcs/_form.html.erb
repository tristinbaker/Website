<span class="vimrc-header"><b> Add To .vimrc</b> </span>
<%= form_for @vimrc, class: "form-horizontal clearfix" do |f| %>
  <div class="form-group">
    <%= f.label "Function:", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :function, placeholder: "Ex: setnu", required: true, class: "form-control" %><br />
    </div>
  </div>
  <div class="form-group">
    <%= f.label "Comment:", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :comments, placeholder: "Ex: Adds line numbers", required: true, class: "form-control" %><br />
    </div>
  </div>
  <div class="form-group">
    <%= f.label "Section?", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select :vim_type_id, VimType.exclude_non_vimrc, :id, :name, include_blank: true %><br />
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Submit Addition To .vimrc", class: "btn btn-secondary" %>
      <%= link_to "Back", :back, class: "btn btn-secondary" %>
    </div>
  </div>
<% end %>
