<%= form_for([@post, @post.comments.build]) do |f| %>
  <div class="form-group">
    <p>
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control' %>
    </p>
  </div>

  <div="form-group">
    <p>
    <%= f.label :content %><br>
    <%= f.text_area :content, class: 'form-control' %>
    </p>
  </div>

  <br>

  <p>
  <%= f.submit class: 'btn btn-secondary' %>
  </p>

<% end %>
